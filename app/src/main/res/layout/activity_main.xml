<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeActivity">

    <data>
        <variable
            name="homeViewModel"
            type="com.corrado4eyes.dehet.ui.viewModels.HomeViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@color/dirtyWhite"
        android:animateLayoutChanges="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/actionBarLayout"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/homeToolbar"
                app:titleTextColor="@color/dirtyWhite"
                android:background="@color/deepSeaBlue"
                android:layout_marginBottom="2dp"
                app:title="De or Het"/>

        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dirtyWhite"
            android:layout_below="@+id/actionBarLayout"
            android:layout_above="@+id/resultFragment"
            android:id="@+id/historyFragment"
            android:name="com.corrado4eyes.dehet.ui.fragments.HistoryListFragment"/>

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dirtyWhite"
            android:layout_above="@+id/searchBarFragment"
            android:layout_marginBottom="10dp"
            android:id="@+id/resultFragment"
            android:name="com.corrado4eyes.dehet.ui.fragments.ResultFragment"/>

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dirtyWhite"
            android:layout_alignParentBottom="true"
            android:id="@+id/searchBarFragment"
            android:name="com.corrado4eyes.dehet.ui.fragments.SearchBarFragment"/>

    </RelativeLayout>
</layout>