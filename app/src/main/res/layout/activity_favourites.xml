<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.favourite.FavouriteActivity">

    <data>
        <variable
            name="favouritesViewModel"
            type="com.corrado4eyes.dehet.ui.viewModels.FavouritesViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/favouritesList"
            app:favouritesEntries="@{favouritesViewModel.favouritesList}"/>

    </RelativeLayout>
</layout>