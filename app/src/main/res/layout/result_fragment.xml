<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.corrado4eyes.dehet.ui.viewModels.HomeViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_relative_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/addResultButton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultLabel"
            android:hint="@string/articleLabel"
            android:fontFamily="@font/montserrat_regular"
            android:text="@{viewModel.resultHistoryEntry.toString()}" />
        </LinearLayout>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:id="@+id/addResultButton"
            android:src="@drawable/add_32x32"
            android:layout_alignParentEnd="true"
            android:clickable="@{viewModel.isAddEntryClickable()}"/>
    </RelativeLayout>
</layout>