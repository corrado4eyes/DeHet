<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.corrado4eyes.dehet.ui.viewModels.HomeViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_relative_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/addResultButton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultHistoryEntry"
            android:hint="@string/articleLabel"
            android:fontFamily="@font/montserrat_regular"
            android:text="@{viewModel.resultHistoryEntry.toString()}" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/roundedButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/addResultButton"
            android:layout_alignParentEnd="true"
            android:clickable="@{viewModel.isAddEntryClickable()}"
            app:icon="@drawable/add_32x32"
            app:iconGravity="textStart"
            android:paddingStart="20dp"/>
    </RelativeLayout>
</layout>