<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.corrado4eyes.dehet.ui.viewModels.HistoryEntryViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/articleLabel"
            android:layout_alignParentStart="true"
            android:text="@{viewModel.adverb}"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/articleLabel"
            android:id="@+id/adverbLabel"
            android:text="@{viewModel.article}"/>
    </RelativeLayout>
</layout>